<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	xmlns:app="http://schemas.android.com/apk/res-auto">

	<androidx.cardview.widget.CardView
		android:id="@+id/toolbarImageContainer"
		android:layout_width="wrap_content"

		android:layout_height="wrap_content"
		app:cardCornerRadius="25dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<ImageView
			android:id="@+id/image"
			android:layout_width="@dimen/spacing_4l"
			android:layout_height="@dimen/spacing_4l"
			android:scaleType="centerCrop"
			tools:src="@mipmap/ic_launcher" />
	</androidx.cardview.widget.CardView>

	<TextView
		android:id="@+id/name"
		style="@style/H2"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintStart_toEndOf="@+id/toolbarImageContainer"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.428"
		tools:text="Cornell Design &amp; Tech Initiative" />

</androidx.constraintlayout.widget.ConstraintLayout>